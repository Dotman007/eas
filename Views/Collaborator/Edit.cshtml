@model Euro_Africa.Models.Collaborator

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Collaborator", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <section id="social" class="parallax">
        <div class="container" style="color:white">
            <div class="row">
                <fieldset style="text-align:center;color:red">
                    <legend style="text-align:center;color:white">Update Collaborator Information</legend>

                    @Html.HiddenFor(model => model.Collaborator_Id)

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Name)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Logo)
                    </div>
                    <center>
                        <div class="editor-field">
                            <input type="file" name="file" id="imagePath" title="Upload Image" />
                        </div>
                    </center>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Description)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>

                    <p>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </p>
                </fieldset>
            </div>
        </div>
    </section>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
