@model Euro_Africa.Models.Collaborator

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />

<br />
<br />

<section id="social" class="parallax">
    <div class="container" style="color:white">
        <div class="row">
            <h2>Delete</h2>

            <h3>Are you sure you want to delete this?</h3>
            <fieldset>
                <legend>Collaborator</legend>

                <div class="display-label">Name</div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Name)
                </div>

                <div class="display-label">Logo</div>
                <div class="display-field">
                    <img src="@string.Format("/Uploads/{0}",@Model.Logo)" alt="@Model.Logo" class="span12" style="height:500px;" />
                </div>

                <div class="display-label">Description</div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </fieldset>
        </div>
    </div>
</section>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <p>
        <input type="submit" value="Delete" class="btn btn-danger btn-effect" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}

