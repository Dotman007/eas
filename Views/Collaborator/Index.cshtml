<h1 style="text-align:center" class="breadcrumb">Collaborators Add Page</h1>
<p class="btn btn-success btn-lg">
    @Html.ActionLink("Add Collaborator", "Create", "Collaborator")
</p>
<br />
<br />
<br />
<table class="table table-striped table-bordered jumbotron table-hover">
    <tr>
        <th>
            Name
        </th>
        <th>
            Logo
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="btn btn-success">
                <p style="color:brown">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Collaborator_Id }) |
                    
                    @Html.ActionLink("Delete", "Delete", new { id = item.Collaborator_Id })
                </p>
            </td>
        </tr>
    }

</table>
