@model IEnumerable<Euro_Africa.Models.Collaborator>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<br />
